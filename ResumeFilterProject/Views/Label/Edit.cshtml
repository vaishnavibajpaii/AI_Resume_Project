@model ResumeFilterProject.Models.ResumeLabelViewModel
@{
    ViewData["Title"] = "Label: " + Model.FileName;
}

<h2>@ViewData["Title"]</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<div class="row">
    <div class="col-md-6">
        <h5>Extracted Text (context)</h5>
        <div style="white-space:pre-wrap; background:#f8f9fa; border:1px solid #ddd; padding:10px; max-height:60vh; overflow:auto;">
            @Model.ParsedText
        </div>
    </div>
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-2">
                <label class="form-label">File</label>
                <div>@Model.FileName</div>
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <a href="@Model.FilePath" target="_blank">open file</a>
                }
            </div>

            <div class="mb-3">
                <label asp-for="Labels" class="form-label"></label>
                <input asp-for="Labels" class="form-control" placeholder="e.g. Java, Spring Boot, AWS" />
                <span asp-validation-for="Labels" class="text-danger"></span>
                <small class="text-muted">
                    Tip: comma-separated tags. Common: Java, Spring Boot, AWS, .NET, ASP.NET Core, React, Angular, Docker, Kubernetes, SQL, NoSQL, Microservices, REST, Node.js, Python, Django
                </small>
            </div>

            <button type="submit" class="btn btn-success">Save Labels</button>
            <a asp-action="Index" class="btn btn-link">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
