@model IEnumerable<ResumeFilterProject.Models.ResumeUpload>
@{
    ViewData["Title"] = "Label Resumes";
}

<h2>Label Resumes</h2>

<form method="get" class="mb-3">
    <input type="text" name="q" value="@Context.Request.Query["q"]" placeholder="Search filename/text/labels" class="form-control" />
    <div class="form-check mt-2">
        <input class="form-check-input" type="checkbox" name="onlyUnlabeled" value="true"
        @(Context.Request.Query["onlyUnlabeled"] == "true" ? "checked" : "") id="onlyUnlabeled" />
        <label for="onlyUnlabeled" class="form-check-label">Show only unlabeled</label>
    </div>
    <button class="btn btn-secondary mt-2">Filter</button>
    <a asp-action="Index" class="btn btn-link">Reset</a>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>File</th>
            <th>Preview</th>
            <th>Labels</th>
            <th>Uploaded</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>
                    <div>@r.FileName</div>
                    @if (!string.IsNullOrEmpty(r.FilePath))
                    {
                        <a href="@r.FilePath" target="_blank">view file</a>
                    }
                </td>
                <td>
                    @{
                        var t = r.ParsedText ?? "";
                        var preview = t.Length > 200 ? t.Substring(0, 200) + "..." : t;
                    }
                    <div style="max-width: 520px; white-space: pre-wrap;">@preview</div>
                </td>
                <td>
                    <span>@r.Labels</span>
                </td>
                <td>@r.UploadedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-primary btn-sm">Label</a>
                </td>
            </tr>
        }
    </tbody>
</table>
