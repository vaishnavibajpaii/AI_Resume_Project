@model List<ResumeFilterProject.Models.ResumeLabel>

<h2>Label Resumes</h2>

@* This section will display the success message after saving *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@* The form now points to the DataCleaning controller *@
<form asp-action="Review" asp-controller="DataCleaning" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Skills</th>
                <th>Experience</th>
                <th>Education</th>
                <th>Projects</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].FileName
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].FileName" />
                    </td>
                    <td><input asp-for="@Model[i].Name" class="form-control" /></td>
                    <td><input asp-for="@Model[i].Contact" class="form-control" /></td>
                    <td><input asp-for="@Model[i].Skills" class="form-control" /></td>
                    <td><input asp-for="@Model[i].Experience" class="form-control" /></td>
                    <td><input asp-for="@Model[i].Education" class="form-control" /></td>
                    <td><input asp-for="@Model[i].Projects" class="form-control" /></td>
                </tr>
            }
        </tbody>
    </table>
    @* The button text is updated for clarity *@
    <button type="submit" class="btn btn-primary">Clean and Review Labels</button>
</form>